let i = 1
while i <= 9
  execute 'nnoremap <silent> <Leader>' . i . ' :' . i . 'wincmd w<CR>'
  execute 'nnoremap <silent>s' . i . ' :' . i . 'wincmd w<CR>'
  if has('terminal')
    execute 'tnoremap <silent> <Leader>' . i . ' <C-w>:' .  i . 'wincmd w<CR>'
  end
  let i = i + 1
endwhile

